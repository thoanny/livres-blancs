<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}WP Whitepaper{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        {##
        {% stylesheets filter='cssrewrite, yui_css'
        '@WPWhitepaperBundle/Resources/public/css/*'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
        {% endstylesheets %}
        ##}
    {% endblock %}
</head>

<body>
<div class="container">

    <div class="row">
        <div id="menu" class="col-md-3">
            <h3>Livres blancs</h3>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('wp_whitepaper_homepage') }}">Accueil</a></li>
                {#{% if is_granted('ROLE_AUTEUR') %}#}
                    <li><a href="{{ path('wp_whitepaper_add') }}">Ajouter un livre blanc</a></li>
                    <li><a href="{{ path('wp_user_editor_register') }}">Inscription Éditeur</a></li>
                {#{% endif %}#}
            </ul>

            <h4>Derniers livres blancs</h4>
           {{ render(controller("WPWhitepaperBundle:Whitepaper:menu", {'limit': 5})) }}
        </div>
        <div id="content" class="col-md-9">
            {% block body %}
            {% endblock %}
        </div>
    </div>

    <hr>

    <footer>
        <p>The sky's the limit © {{ 'now'|date('Y') }} and beyond.</p>
    </footer>
</div>

{% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    {##
    {% javascripts filter="yui_js" '@WPWhitepaperBundle/Resources/public/js/main.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    ##}
{% endblock %}

</body>
</html>