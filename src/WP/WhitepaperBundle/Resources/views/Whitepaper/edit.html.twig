{% extends "WPWhitepaperBundle::layout.html.twig" %}

{% block wpwhitepaper_body %}
    <h1>Modifier un livre blanc</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.title, 'Titre') }}
        {{ form_errors(form.title) }}
        {{ form_widget(form.title, { 'attr': { 'class': 'form-control' } }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description, 'Description') }}
        {{ form_errors(form.description) }}
        {{ form_widget(form.description, { 'attr': { 'class': 'form-control', 'rows': 3 } }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.user, 'Éditeur') }}
        {{ form_errors(form.user) }}
        {{ form_widget(form.user) }}
    </div>

    <div class="form-group">
        {{ form_label(form.lang, 'Langue') }}
        {{ form_errors(form.lang) }}
        {{ form_widget(form.lang) }}
    </div>

    <div class="form-group">
        {{ form_label(form.publishedOn, 'Date de publication') }}
        {{ form_errors(form.publishedOn) }}
        {{ form_widget(form.publishedOn) }}
    </div>

    <div class="form-group">
        {{ form_label(form.file, 'Livre blanc') }}
        {{ form_errors(form.file) }}
        {{ form_widget(form.file) }}
    </div>

    <div class="form-group">
        {{ form_label(form.image, 'Illustration') }}
        {{ form_errors(form.image) }}
        {{ form_widget(form.image) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.published) }}
        {{ form_label(form.published, 'Publié') }}
    </div>

    {{ form_widget(form) }}

    {{ form_end(form) }}

{% endblock %}