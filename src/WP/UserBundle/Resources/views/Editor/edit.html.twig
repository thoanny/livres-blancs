{% extends "WPWhitepaperBundle::layout.html.twig" %}

{% block wpwhitepaper_body %}
    <h1>Modifier un éditeur</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.name, 'Nom') }}
        {{ form_errors(form.name) }}
        {{ form_widget(form.name, { 'attr': { 'class': 'form-control' } }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description, 'Description') }}
        {{ form_errors(form.description) }}
        {{ form_widget(form.description, { 'attr': { 'class': 'form-control', 'rows': 3 } }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.website, 'Site Internet') }}
        {{ form_errors(form.website) }}
        {{ form_widget(form.website, { 'attr': { 'class': 'form-control' } }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.facebook, 'Facebook') }}
        {{ form_errors(form.facebook) }}
        {{ form_widget(form.facebook, { 'attr': { 'class': 'form-control' } }) }}
        <span id="helpBlock" class="help-block">Indiquer le lien complet.</span>
    </div>

    <div class="form-group">
        {{ form_label(form.twitter, 'Twitter') }}
        {{ form_errors(form.twitter) }}
        {{ form_widget(form.twitter, { 'attr': { 'class': 'form-control' } }) }}
        <span id="helpBlock" class="help-block">Indiquer seulement le pseudonyme (sans le @).</span>
    </div>

    <div class="form-group">
        {{ form_label(form.email, 'E-mail') }}
        {{ form_errors(form.email) }}
        {{ form_widget(form.email, { 'attr': { 'class': 'form-control' } }) }}
    </div>

    <div class="form-group">
        {{ form_label(form.phone, 'Téléphone') }}
        {{ form_errors(form.phone) }}
        {{ form_widget(form.phone, { 'attr': { 'class': 'form-control' } }) }}
    </div>

    {{ form_widget(form) }}

    {{ form_end(form) }}

{% endblock %}